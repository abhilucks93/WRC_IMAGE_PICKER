<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wildnet.wrcpicker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name">

        <activity
            android:name="com.wildnet.wrcpicker.imagePicker.main.CropImageActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity
            android:name="com.wildnet.wrcpicker.imagePicker.patternClasses.PreviewActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity
            android:name="com.wildnet.wrcpicker.imagePicker.main.GridImagesActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" />

        <activity
            android:name=".imagePicker.patternClasses.CameraCustomActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".imagePicker.patternClasses.CameraDefaultActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".imagePicker.patternClasses.GalleryDefaultActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".imagePicker.patternClasses.GalleryCustomActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
