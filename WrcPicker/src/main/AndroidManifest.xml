    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name" >

        <activity
            android:name="com.wildnet.wrcpicker.imagePicker.ui.CropImageActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            >

        </activity>

        <activity
            android:name="com.wildnet.wrcpicker.imagePicker.ui.PreviewActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >


        </activity>

        <activity
            android:name="com.wildnet.wrcpicker.imagePicker.ui.GridImagesActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>


    </application>

</manifest>
